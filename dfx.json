{
  "canisters": {
    "backend": {
      "type": "motoko",
      "main": "src/backend/main.mo"
    },
    "frontend": {
      "type": "assets",
      "source": ["src/frontend/out"],
      "build": [
        "cd src/frontend && npm install",
        "cd src/frontend && npm run build"
      ]
    },

    "internet_identity": {
      "type": "custom",
      "wasm": "src/internet_identity/internet_identity.wasm",
      "candid": "src/internet_identity/internet_identity.did",
      "argument": "()"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "output_env_file": ".env",
  "version": 1
}